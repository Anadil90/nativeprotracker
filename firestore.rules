rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /items/{document=**} {
      allow read, write, create, update, delete: if request.auth != null;
    }
    match /items/{itemId}/entries/{entryId} {
      allow read, write, create, update, delete: if request.auth != null;
    }
    match /{path=**}/entries/{entryId} {
      allow read, write, create, update, delete: if request.auth != null;
    }
  }
}
